pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('catalogo-service') {
                    sh 'npm install'
                    sh 'npx nest build'
                }
            }
        }

        stage('Security Scan') {
            steps {
                dir('catalogo-service') {
                    sh 'trivy fs . || true'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('catalogo-service') {
                    sh 'docker build -t catalogo-service .'
                }
            }
        }

        stage('Image Scan') {
            steps {
                sh 'trivy image catalogo-service || true'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker stop catalogo-service || echo "nao rodando"
                docker rm catalogo-service || echo "nao existe"
                docker run -d --name catalogo-service --network vinheria-net -p 3002:3002 catalogo-service
                '''
            }
        }
    }
}
